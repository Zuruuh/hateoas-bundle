{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "zuruuh/hateoas-bundle",
  "description": "Symfony bundle for the zuruuh/hateoas library",
  "type": "symfony-bundle",
  "keywords": [
    "symfony",
    "bundle",
    "hateoas",
    "hypermedia"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "William Durand",
      "email": "william.durand1@gmail.com"
    },
    {
      "name": "Zuruuh",
      "homepage": "https://github.com/Zuruuh"
    }
  ],
  "require": {
    "php": ">=8.1",
    "symfony/expression-language": "^4.0 || ^5.0 || ^6.0",
    "symfony/framework-bundle": "^4.0 || ^5.0 || ^6.0 || ^7.0",
    "symfony/serializer": "^5.4 || ^6.0 || ^7.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.25",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-symfony": "^1.3",
    "phpunit/phpunit": "^10",
    "psalm/plugin-phpunit": "^0.18.4",
    "psalm/plugin-symfony": "^5.0",
    "symfony/stopwatch": "^5.4",
    "twig/twig": "^3.0",
    "vimeo/psalm": "^5.15"
  },
  "autoload": {
    "psr-4": {
      "Zuruuh\\HateoasBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "Zuruuh\\HateoasBundle\\Tests\\": "tests/"
  },
  "config": {
    "sort-packages": true
  }
}
